<Page x:Class="PM01_519_Yarakov.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PM01_519_Yarakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Логин:" Width="45" Margin="-160,80,0,0" HorizontalAlignment="Center" TextAlignment="Right"/>
            <TextBox Width="100" Name="Logins" Margin="0,-15,0,0"/>
            <TextBlock Text="Пароль:" Width="45" Margin="-160,15,0,0" TextAlignment="Right"/>
            <PasswordBox Width="100" Name="Pass" PasswordChar="*" Margin="0,-15,0,0"/>
            <Button Name="Reg" Content="Зарегистрироваться" Width="130" Margin="0,40,-110,0" HorizontalAlignment="Center" Click="Reg_Click"/>
            <Button Name="back" Content="Назад" Width="50" Margin="-130,-20,0,0" HorizontalAlignment="Center" Click="back_Click"/>
        </StackPanel>
    </Grid>
</Page>
