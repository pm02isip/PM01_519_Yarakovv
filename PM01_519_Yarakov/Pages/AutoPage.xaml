<Page x:Class="PM01_519_Yarakov.Pages.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PM01_519_Yarakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно авторизации">

    <Grid Background="White">
        <StackPanel>
        <TextBlock Text="Логин:" Width="45" Margin="-160,80,0,0" HorizontalAlignment="Center" TextAlignment="Right" />
        <TextBox Width="100" Name="Logins" Margin="0,-15,0,0"/>
        <TextBlock Text="Пароль:" Width="45" Margin="-160,15,0,0" TextAlignment="Right" />
        <PasswordBox Width="100" Name="Pass" PasswordChar="*" Margin="0,-15,0,0" />
        <Button Content="Войти" Width="50" Margin="0,40,-100,0" HorizontalAlignment="Center" Click="Button_Click_1" />
        <Button Content="Назад" Width="50" Margin="-120,-20,0,0" HorizontalAlignment="Center" Click="Button_Click" />
        <TextBlock Text="Неверный логин или пароль!"  TextAlignment="Center" Margin="0,15,0,0" FontSize="18" Visibility="Hidden" Name="Error"/>
        <Button Content="Зарегистрироваться" Width="120" Click="Button_Click_2" />
    </StackPanel>
    </Grid>
</Page>
